{
  "name": "backend",
  "version": "1.0.0",
  "description": "NodeJS backend API for reactjs",
  "main": "server.js",
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 10,
    "statements": 10,
    "functions": 10,
    "branches": 10,
    "include": [
      "server.js",
      "model/*.js"
    ],
    "reporter": [
      "lcov",
      "html",
      "text-summary"
    ],
    "cache": true,
    "all": true
  },
  "scripts": {
    "lint": "eslint -o quality.html -f html server.js",
    "test": "nyc mocha --recursive --exit --timeout 10000"
  },
  "author": "Akilan",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.18.3",
    "cors": "^2.8.4",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "jsonwebtoken": "^8.3.0",
    "mongoose": "^5.1.6"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "eslint": "^5.1.0",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2"
  }
}
